# ==========================================
# CBT Platform - Environment Configuration
# ==========================================

# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cbt_platform
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Super Admin Configuration
SUPER_ADMIN_EMAIL=admin@cbtplatform.com
SUPER_ADMIN_PASSWORD=change-this-strong-password

# Email via Resend (https://resend.com - free tier: 3,000 emails/month)
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=CBT Platform <noreply@yourdomain.com>

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Stripe Configuration (International Payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Paystack Configuration (Nigeria/Africa Payments)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# OpenAI Configuration (AI Question Generation)
OPENAI_API_KEY=sk-your-openai-api-key

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
